
@{
    ViewBag.Title = "Login";
}

<body style="background-image:url(../../Item/makeup-desktop-wallpaper-59557-61344-hd-wallpapers.jpg)">
    <h2>Login</h2>
    @Html.ValidationSummary()
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label>User name</label>
            @Html.TextBox("UserId", null, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Password</label>
            @Html.TextBox("Password", null, new { @class = "form-control", type = "password" })
        </div>
        <button class="btn btn-primary">Login</button>
    }
</body>